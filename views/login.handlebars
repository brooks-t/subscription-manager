<div class="container-fluid">
  <div class="card mb-5" id="logoCard">
    <div class="card-body">
      <img class="img-fluid subster-logo" src="../img/subster-logo.png" width="25%" height="auto">
      <h1 class="card-title">Subster</h1>
      <p class="card-text">Subdue your subscriptions</p>
    </div>
  </div>

  <div class="card">
    <div class="card-body">
      <div class="container-fluid p-0">
        <div class="row no-gutters">
          <div class="col-7 p-0">
            <h5 class="card-title"><a href="/signup">Sign Up</a></h5>
          </div>
          <div class="col-5">
            <h5 class="card-title"><u>Log In</u></h5>
          </div>
        </div>
      </div>
      <form class="form login-form">
      <div class="form-group">
        <label for="loginEmail">Email:</label>
        <input class="form-control" type="text" id="loginEmail" />
      </div>
      <div class="form-group">
        <label for="loginPassword">Password:</label>
        <input class="form-control" type="password" id="loginPassword" />
      </div>
      <div class="form-group">
        <button class="btn" type="submit" id="login-btn">Log In</button>
      </div>
    </form>
    </div>
  </div>
</div>

