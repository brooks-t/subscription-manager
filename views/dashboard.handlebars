<div class="card" id="navbar">
    <div class="card-body" id="dashCard">
        <div class="container-fluid p-0">
            <div class="row no-gutters" id="dashRow">
                <div class="col-2 d-flex">
                    <img class="img-fluid subster-logo" src="../img/subster-logo.png">
                </div>
                <div class="col-2 d-flex justify-content-center">
                    <a href="/chart"><button type="button" id="chartBtn"><i class="fa fa-bar-chart"></i></button></a>
                </div>
                <div class="col-2 d-flex justify-content-center dropdown">
                    <button type="button" id="filterBtn"><i onclick="dropDown()"
                            class="dropbtn fa fa-sort"></i></button>
                    <div id="myDropdown" class="dropdown-content">
                        <a href="#" id="alphatical">Alphabetically</a>
                        <a href="#" id="highToLow">Highest to lowest price</a>
                        <a href="#" id="lowToHigh">Lowest to highest price</a>
                    </div>
                </div>
                <div class="col-2 d-flex justify-content-center">
                    <button type="button" id="logoutBtn"><i class="fa fa-sign-out"></i></button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card" id="subCard">
    <div class="card-body p-2" id="subCardBody">
        {{#if subscriptions.length}}
        {{#each subscriptions as |subscription|}}
        <a href="/editsub/{{id}}">
            <div class="card substers" id="subs" data-category="{{amount}}">
                <div class="card-body container-fluid">
                    <div class="row" id="bigRow">
                        <div class="col-3">
                            <div id="iconDiv"></div>
                        </div>
                        <div class="container-fluid" id="subInfo">
                            <div class="row no-gutters">
                                <div class="col-8">
                                    <p class="sub-title" id="subTitle">{{title}}</p>
                                </div>
                                <div class="col-4">
                                    <p class="sub-title" id="subAmount">${{amount}}</p>
                                </div>
                            </div>
                            <div class="row no-gutters">
                                <div class="col-8">
                                    <p class="card-text" id="subCategory">{{category}}</p>
                                </div>
                                <div class="col-4">
                                    <p class="card-text" id="subCycle">{{billing_cycle}}</p>
                                </div>
                                
                            </div>
                            <div class="row no-gutters">
                                <div class="col-8">
                                    <p class="card-text" id="subRating">{{rating}}‚≠ê</p>
                                </div>
                                <div class="col-4">
                                    <p class="card-text" id="subNextPay">{{format_date next_payment}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </a>
        {{/each}}
        {{/if}}  
        <a href="/addsub"><img class="img-fluid" src="../img/plus-orange.png" id="addSubBtn"></a>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="./js/dashboard.js"></script>