<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-10">
                <h5 class="card-title text-center">Your Subscriptions</h5>
            </div>
            <div class="col-1">
                <button type="button" id="filterBtn"><i class=" fa fa-sort"></i></button>
            </div>
        </div>
    </div>
</div>

<div class="card" id="subCard">
    <div class="card-body" id="subCardBody">
        <div class="card" id="subs">
            <div class="card-body container-fluid">
                <div class="row" id="bigRow">
                    <div class="col-3">
                        <div id="iconDiv"></div>
                    </div>
                    <div class="container-fluid" id="subInfo">
                        <div class="row">
                            <div class="col-4">
                                <h5 class="card-title" id="subTitle">Netflix</h5>
                            </div>
                            <div class="col-4">
                                <p class="card-text" id="subAmount">$40.00</p>
                            </div>
                            <div class="col-4">
                                <p class="card-text" id="subCycle">Monthly</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <p class="card-text" id="subCategory">Streaming</p>
                            </div>
                            <div class="col-4">
                                <p class="card-text" id="subRating">4 stars</p>
                            </div>
                            <div class="col-4">
                                <p class="card-text" id="subNextPay">May 30</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card" id="subs">
            <div class="card-body container-fluid">
                <div class="row" id="bigRow">
                    <div class="col-3">
                        <div id="iconDiv"></div>
